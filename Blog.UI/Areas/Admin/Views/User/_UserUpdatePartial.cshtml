@model UserUpdateDto

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-pencil"></span> Kullanıcı Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="user-update-form" enctype="multipart/form-data">
                    <input asp-for="Id" type="hidden" />
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" id="validation-summary" aria-hidden="true" style="display:none">
                    </div>
                    <div class="form-group" style="align-items:center">
                        <div class="row">
                            <div class="form-group col-4">
                                <input type="hidden" asp-for="Picture"/>
                                <img class="img-fluid img-thumbnail" src="~/images/@Model.Picture" width="100" height="100" style="border-radius:50%" />
                            </div>
                            <div class="col-8">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control" required placeholder="Kullanıcı Adınız" />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" asp-for="Email" class="form-control" required placeholder="Mail Adresiniz" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" required placeholder="Telefon Numaranız" />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" accept="image/*" asp-for="PictureFile" class="form-control" style="padding: 2px" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="user-close-btn" class="btn btn-danger w-100" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" id="btnUpdate" class="btn btn-success w-100"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>