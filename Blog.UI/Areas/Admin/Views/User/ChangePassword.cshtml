@model UserPasswordChangeDto
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<ol class="breadcrumb mb-4 mt-3">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User" asp-area="Admin">Kullanıcılar</a></li>
    <li class="breadcrumb-item"><a asp-action="ChangePassword" asp-controller="User" asp-area="Admin">Şifre Değiştir</a></li>
</ol>

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> Şifre Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-area="Admin" asp-action="ChangePassword" id="user-update-form">
                    <div asp-validation-summary="All" id="validation-summary"> </div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input type="password" asp-for="CurrentPassword" class="form-control" required placeholder="Mevcut Şifreniz" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input type="password" asp-for="NewPassword" class="form-control" required placeholder="Yeni Şifre" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPasswordAgain"></label>
                        <input type="password" asp-for="NewPasswordAgain" class="form-control" required placeholder="Yeni Şifre Tekrar" />
                        <span class="text-danger" asp-validation-for="NewPasswordAgain"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" asp-controller="Home" asp-area="Admin" as class="btn btn-danger w-100" data-dismiss="modal"><span class="fas fa-times"></span> İptal</a>
                        <button type="submit" id="btnUpdate" class="btn btn-success w-100 mt-3"><span class="fas fa-save"></span> Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

