@model UserLoginDto

@{
    ViewBag.Title = "Giriş Yap";
    Layout = "_UserLoginLayout";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">GİRİŞ YAP</h3></div>
                <div class="card-body">
                    <form asp-controller="User" asp-action="Login" asp-area="Admin">
                        <div asp-validation-summary="All" class="alert alert-danger" style="display:none">
                            <input id="validation" value="@ViewData.ModelState.IsValid.ToString()" />
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email" for="inputEmailAddress"></label>
                            <input class="form-control py-4" asp-for="Email" type="email" placeholder="Mail adresinizi giriniz" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password" for="inputPassword"></label>
                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Şifrenizi giriniz" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                <label class="custom-control-label" asp-for="RememberMe">Beni Hatırla</label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-primary btn-sm" href="#"><span class="fas fa-unlock-alt"></span> Şifreni mi Unuttun?</a>
                            <button id="btn-login"  type="submit" class="btn btn-success btn-sm w-25"> <span class="fas fa-home"></span> Giriş</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div  class="small"><a class="btn btn-secondary w-100" href="#"><span class="fas fa-registered"></span> Kayıt Ol</a></div>
                    <div  class="small"><a class="btn btn-warning w-100 mt-3" href="/Home/Index"><span class="fas fa-book"></span> Siteye Git</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

